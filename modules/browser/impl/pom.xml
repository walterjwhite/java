    <dependency>
      <groupId>com.walterjwhite.java.modules.compression.modules.xz</groupId>
      <artifactId>impl</artifactId>
      <version>0.2.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.walterjwhite.java.infrastructure.inject</groupId>
      <artifactId>core</artifactId>
