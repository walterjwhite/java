<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
  <persistence-unit name="default">
    <class>com.walterjwhite.examples.cli.JPAEntity</class>
    <properties>
      <property name="javax.jdo.option.ConnectionURL" value="jdbc:h2:mem:h2"/>
      <property name="javax.jdo.option.ConnectionDriverName" value="org.h2.Driver"/>
      <property name="javax.jdo.option.ConnectionUserName" value="user"/>
      <property name="javax.jdo.option.ConnectionPassword" value="pass"/>
      <property name="javax.jdo.option.Mapping" value="h2"/>
      <property name="javax.jdo.option.PersistenceUnitName" value="default"/>
      <property name="datanucleus.schema.autoCreateAll" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
